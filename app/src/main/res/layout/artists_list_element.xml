<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/artists_list_element_padding">

    <ImageView
        android:layout_width="@dimen/artists_list_element_image_size"
        android:layout_height="@dimen/artists_list_element_image_size"
        android:id="@+id/ivCover"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/artists_list_element_padding"
        android:paddingTop="@dimen/artists_list_element_inner_padding"
        android:paddingBottom="@dimen/artists_list_element_inner_bottom_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/tvName"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_big"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="genre1, genre2, genre3, genre4, genre5"
            android:id="@+id/tvGenres"
            android:textSize="@dimen/text_size_normal"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/artists_list_element_inner_padding"
            android:singleLine="false"
            android:maxLines="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="x3 albums, x3 tracks"
            android:id="@+id/tvAlbumsAndTracks"
            android:textSize="@dimen/text_size_normal"
            android:gravity="bottom"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>